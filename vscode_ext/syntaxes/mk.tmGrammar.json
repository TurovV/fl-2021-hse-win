{
  "scopeName": "source.abc",
  "patterns": [{ "include": "#expression" }],
  "repository": {
    "expression": {
      "patterns": [{ "include": "#type" }, { "include": "#status" }, { "include" : "#comment"}, {"include" : "#operators"} ]
    },
    "type": {
      "match": "cond|edge|alph",
      "name": "entity.name.type"
    },
    "status": {
      "match": "terminate|stock|start|regular",
      "name": "constant.language"
    }, 
    "comment": {
      "match": "(\/\/.*)",
      "name" : "comment.line"
    }
  }
}